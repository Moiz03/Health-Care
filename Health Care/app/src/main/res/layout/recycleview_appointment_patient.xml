<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:id="@+id/recycleview_appointment_patient_item_layout"
    android:background="@drawable/recycleview_border"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/blood_group"
        android:src="@drawable/male"
        android:layout_centerVertical="true"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/recycleview_appointment_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/blood_group"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/newblue"
        android:textStyle="bold"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/recycleview_appointment_patient_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/blood_group"
        android:layout_below="@+id/recycleview_appointment_patient_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/not_register"
        android:textSize="15sp"
        android:textColor="@color/lightblue"
        />
    <TextView
        android:id="@+id/recycleview_appointment_patient_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/blood_group"
        android:layout_below="@+id/recycleview_appointment_patient_age"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textColor="@color/lightblue"
        />
    <TextView
        android:id="@+id/recycleview_appointment_patient_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/blood_group"
        android:layout_below="@+id/recycleview_appointment_patient_date"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textColor="@color/lightblue"
        />

    <ImageView
        android:id="@+id/recycleview_appointment_patient_phone_no"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/call_24"
        android:clickable="true"
        android:focusable="true"
        />

</RelativeLayout>
